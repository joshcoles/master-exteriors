<% include ./partials/_header %>

<section>
  <div class="contact-us">
    <form action="contact" method="post">
    <h1>Contact Us</h1>
      <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="user_name" placeholder="John Smith">
      </div>
      <div>
        <label for="email">Email</label>
        <input type="text" id="email" name="user_email" placeholder="johnsmith@gmail.com">
      </div>
      <div>
        <label for="phone">Phone</label>
        <input type="text" id="Phone" name="user_phone" placeholder="(902) 867-5309">
      </div>
      <div>
        <label for="message">Message</label>
        <br>
        <textarea type="text" id="message" name="user_message" placeholder="Hi, I'm interested in having some windows replaced..."></textarea>
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</section>

<% include ./partials/_footer %>